{
  "name": "gh-upload-log",
  "version": "0.3.1",
  "description": "A tool to upload log files to GitHub as Gists or repositories",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "gh-upload-log": "src/cli.js"
  },
  "scripts": {
    "test": "bun test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check:file-size": "bun scripts/check-file-size.mjs",
    "check": "bun run lint && bun run format:check && bun run check:file-size",
    "prepare": "husky || true",
    "changeset": "changeset",
    "changeset:version": "bun scripts/changeset-version.mjs",
    "changeset:publish": "changeset publish",
    "changeset:status": "changeset status --since=origin/main"
  },
  "keywords": [
    "github",
    "gist",
    "log",
    "upload",
    "cli"
  ],
  "author": "Link Foundation",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "https://github.com/link-foundation/gh-upload-log.git"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "command-stream": "^0.7.1",
    "lino-arguments": "^0.2.1",
    "log-lazy": "^1.0.4",
    "use-m": "^8.13.7",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "test-anywhere": "^0.8.48"
  },
  "lint-staged": {
    "*.{js,mjs,cjs}": [
      "eslint --fix --max-warnings 0",
      "prettier --write",
      "prettier --check"
    ],
    "*.md": [
      "prettier --write",
      "prettier --check"
    ]
  }
}
